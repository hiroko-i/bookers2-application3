<%= render 'users/sidebar', user: @user, book: @book%>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback:"no_image.jpg" %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %></td>
        <% end %>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>