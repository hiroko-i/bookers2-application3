<h2>User info</h2>
<%= attachment_image_tag @user,:profile_image,:fill, 63, 63, format:'jpeg',fallback:"no_image.jpg" %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name%></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<div>
<% if @user.id == current_user.id %>
  <%= link_to "EDIT", edit_user_path(@user.id) %>
<% else %>
  <%= link_to "EDIT", user_path(current_user.id) %>
<% end %>
</div>
