<h2>Users info</h2>

<% if @user.errors.any? %>
  <div id = "error">
    <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name,autofocus: true, id:"user_name",placeholder:"name" %>
  <label for="profile_image">Image</label>
  <%= f.attachment_field :profile_image, placeholder:"profile_image" %>
  <label for="user_introduction">Introduction</label>
  <%= f.text_field :introduction,autofocus: true, id:"user_introduction",placeholder:"introduction" %>

  <%= f.submit "Update User" %>
<% end %>